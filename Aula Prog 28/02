#def -> definir (ou declarar)

def cabecalho():
    print("." * 30)
    print("Relatório")
    print("."*30)

# Uso ou chamada da função
cabecalho()
cabecalho()
cabecalho()
cabecalho()
cabecalho()
cabecalho()

