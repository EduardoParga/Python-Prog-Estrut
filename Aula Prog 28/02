# Ternários

def e_par(num):
     return "é par" if num % 2 == 0 else "é impar"

def e_par2 (num):
    return num % 2 == 0

def le_nome():
    nome = input("Informe seu nome: ")
    if nome == "":
        print ("Nome Inválido!")
    if not nome: # Mais comum de ser usado
         print ("Nome Inválido!")

def avaliacao(conceito):
     if conceito == "Bom" or conceito == "Ótimo" or conceito == "Excelente":
          print ("Aprovado!")
     else:
          print ("Reprovado!")


def avaliacao2(conceito):
     match conceito:
          case "Bom":
                print ("Aprovado")
          case ("Ótimo"):
                print("Aprovado!")
          case ("Excelente"):
                print("Aprovado!")
          case _:
                print("Reprovado!")


def avaliacao3(conceito):
     match conceito:
          case "Bom"| "Ótimo"| "Excelente":
               print ("Aprovado!")
          case _:
               print("Reprovado!")






















